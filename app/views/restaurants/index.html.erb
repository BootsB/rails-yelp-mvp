<h1 class="mt-3"><strong>Restaurants:</strong></h1>
<div class="row mt-3">
  <% @restaurants.each do |restaurant| %>
    <div class="card col-3">
      <div class="card-body">
        <h5 class="card-title"><%= restaurant.name %></h5>
        <p class="card-text"><%= restaurant.category %> cuisine</p>
        <%= link_to "See more", restaurant_path(restaurant.id), class: "purple btn btn-sm mb-1" %>
      </div>
    </div>
  <% end %>
</div>
<br>
