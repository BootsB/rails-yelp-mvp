<%= render @restaurant %>

<div class="row">
  <div class="col-6">
    <p><strong>Reviews</strong></p>
    <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item">
        <p>
          <% review.rating.times do %>
            <%= "⭐" %>
          <% end %>
        </p>
        <p><%= "-" + review.content %></p>
      </li>
    <% end %>
    </ul>
  </div>
  <div class="col-6">
    <h5><strong>Add new review:</strong></h5>
    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating %>
      <%= f.submit "Submit review", class: "purple btn" %>
    <% end %>
  </div>
</div>
